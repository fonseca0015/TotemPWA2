@model IEnumerable<TotemPWA.Models.Cupom>

@{
    //Layout = "_Admin";
    ViewData["Title"] = "Cupons";
}

<div class="admin-header d-flex justify-content-between align-items-center">
    <h2>Gerenciar Cupons</h2>
    <a href="/Admin" class="btn btn-voltar-painel">
        <i class="fas fa-arrow-left"></i> Voltar ao Painel
    </a>
</div>

<a asp-action="Create" class="btn btn-primary mb-3">Novo Cupom</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cupom in Model)
        {
            <tr>
                <td>@cupom.Code</td>
                <td>@cupom.Type</td>
                <td>@cupom.Value.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cupom.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cupom.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>