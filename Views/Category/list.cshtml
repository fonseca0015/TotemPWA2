<a role="button" class="btn btn-success" asp-action="Create"> adicionar categoria</a>
<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Slug</th>
      <th scope="col">icone</th>
      <th scope="col">categoria pai</th>
      <th scope="col"> ações</th>
    </tr>
  </thead>
 <tbody>
    
@foreach (var item in Model)
        {
            <tr scope="row">
                <td>@item.Name</td>
                <td>sem slug </td>
                <td><img src="@item.Icon" ></td>
                <td>@item.ParentCategory?.Name</td>
                <td>
                  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> 
                  <button class="btn btn-outline-danger" >remover</button>
                </td>
            </tr>
        }