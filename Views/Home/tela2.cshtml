@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/css/stylePagina3.css">
  <title>Resumo do Pedido</title>
</head>
<body>
  <div class="wrapper">
    <div class="header"></div>

    <div class="acoes-topo">
      <a class="voltar" href="@Url.Action("Tela1", "Home")">&larr;</a>
      <div class="cupom">INSIRA AQUI SEU CUPOM!</div>
    </div>

    <div class="secao">
      <h2>LANCHES</h2>

      @* Lanches *@

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche1.png" alt="Burguer 404" class="lanchesFotos">
          <div class="card-texto">
            <h4>Burguer 404</h4>
            <p>Pão brioche, queijo cheddar derretido, hambúrguer de costela 180g...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$49,80</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche2.png" alt="Looping Duplo" class="lanchesFotos">
          <div class="card-texto">
            <h4>Looping Duplo</h4>
            <p>Pão brioche, dois hambúrgueres artesanais 150g, queijo cheddar...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$32,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche3.png" alt="Full Stack Burger" class="lanchesFotos">
          <div class="card-texto">
            <h4>Full Stack Burger</h4>
            <p>Pão australiano, hambúrguer duplo artesanal 150g, molho especial ADS...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$29,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche4.png" alt="Hello World Veggie" class="lanchesFotos">
          <div class="card-texto">
            <h4>Hello World Veggie</h4>
            <p>Pão de batata, hambúrguer de grão-de-bico e cogumelos, queijo vegano...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$21,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche5.png" alt="Backend Brisket" class="lanchesFotos">
          <div class="card-texto">
            <h4>Backend Brisket</h4>
            <p>Pão de malte, brisket defumado 12h, queijo prato, cebola roxa marinada...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$34,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche6.png" alt="Frontend BBQ" class="lanchesFotos">
          <div class="card-texto">
            <h4>Frontend BBQ</h4>
            <p>Pão australiano, hambúrguer de fraldinha 150g, queijo gorgonzola...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$23,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche7.png" alt="DevOps Bacon" class="lanchesFotos">
          <div class="card-texto">
            <h4>DevOps Bacon</h4>
            <p>Pão brioche tostado, hambúrguer de costela 180g, queijo prato, cebola roxa...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$26,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche8.png" alt="Byte Burger" class="lanchesFotos">
          <div class="card-texto">
            <h4>Byte Burger</h4>
            <p>Pão de batata, hambúrguer smash de fraldinha 120g, queijo cheddar...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$19,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/lanche9.png" alt="Refatorado Melt" class="lanchesFotos">
          <div class="card-texto">
            <h4>Refatorado Melt</h4>
            <p>Pão brioche, hambúrguer de picanha 150g, queijo mussarela derretido...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$22,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>

      <h2>SOBREMESAS</h2>

      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/imgSobremesasCategorias.png" alt="Milkshake Overflow" class="lanchesFotos">
          <div class="card-texto">
            <h4>Milkshake Overflow</h4>
            <p>Milkshake de baunilha, calda de chocolate, chantilly...</p>
          </div>
        </div>
        <div>
          <p class="card-preco">R$17,90</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade">-</button>
            <span class="quantidade">1</span>
            <button class="btn-quantidade">+</button>
          </div>
        </div>
      </div>
    </div>

    <div class="rodape">
      <div class="barraContainer">
        <div class="barraPreenchida"></div>
      </div>
      <div class="rodape-info">
        <p>Total de itens: 10</p>
        <p>Total do pedido: <span style="color: #42B61F; font-weight: bold; text-decoration: underline">R$ 312,90</span></p>
      </div>
      <div class="rodape-acoes">
        <a class="btn-cancelar" href="@Url.Action("Tela1", "Home")">Cancelar pedido</a>
        <button class="btn-confirmar">Confirmar pedido</button>
      </div>
    </div>
  </div>
</body>
</html>
