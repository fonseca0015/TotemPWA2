@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/css/stylePagina3.css">
  <script src="~/js/modalPersonalizar.js"></script>
  <title>Resumo do Pedido: </title
</head>
<body>
  <div class="wrapper">
    <div class="header"></div>

    <div class="acoes-topo">
      <a class="voltar" href="@Url.Action("Tela1", "Home")">&larr;</a>
      <div class="cupom">INSIRA AQUI SEU CUPOM!</div>
    </div>

    <div class="secao">
      <h2>LANCHES</h2>

      <!-- Lanche com botão Personalizar -->
      <div class="card-item" id="Carditem1">
        <div class="card-info">
          <img src="~/imgs/lanche1.png" alt="Burguer 404" class="lanchesFotos">
          <div class="card-texto">
            <h4>Burguer 404</h4>
            <p>Pão brioche, queijo cheddar derretido, hambúrguer de costela 180g...</p>
            <button class="modal-adicionar" onclick="abrirModalPersonalizar('Burguer 404')">Personalizar</button>
          </div>
        </div>
        <div>
          <p class="card-preco" id="item1preco">R$49,80</p>
          <div class="quantidade-controle">
            <button class="btn-quantidade" onclick="adicionarItem(-1,'item1')">-</button>
            <span class="quantidade"id="item1">1</span>
            <button class="btn-quantidade" onclick="adicionarItem(1,'item1')">+</button>
          </div>
        </div>
      </div>

      <!-- Os outros lanches seguem o mesmo padrão com botão Personalizar -->
      <!-- ... mantenha os demais lanches aqui como já estão ... -->

      <h2>SOBREMESAS</h2>
      <div class="card-item">
        <div class="card-info">
          <img src="~/imgs/imgSobremesasCategorias.png" alt="Milkshake Overflow" class="lanchesFotos">
          <div class="card-texto">
            <h4>Milkshake Overflow</h4>
            <p>Milkshake de baunilha, calda de chocolate, chantilly...</p>
          </div>
        </div>
        <div>
          <p class="card-preco" id="item2preco">R$17,90</p><!-- adicionar alteração dos ids com backend futuro-->
          <div class="quantidade-controle">
            <button class="btn-quantidade" onclick="adicionarItem(-1,'item2')">-</button>
            <span class="quantidade"id="item2">1</span>
            <button class="btn-quantidade" onclick="adicionarItem(1,'item2')">+</button>
          </div>
        </div>
      </div>
    </div>

    <div class="rodape">
      <div class="barraContainer">
        <div class="barraPreenchida"></div>
      </div>
      <div class="rodape-info">
        <p>Total de itens: 10</p>
        <p>Total do pedido: <span style="color: #42B61F; font-weight: bold; text-decoration: underline">R$ 312,90</span></p>
      </div>
      <div class="rodape-acoes">
        <a class="btn-cancelar" href="@Url.Action("Tela1", "Home")">Cancelar pedido</a>
        <button class="btn-confirmar">Confirmar pedido</button>
      </div>
    </div>
  </div>

  <!-- Modal de Personalização -->
  <div class="modal-overlay" id="modalPersonalizar">
    <div class="modal-content">
      <button class="modal-close" onclick="fecharModalPersonalizar()">&times;</button>
      <h3 id="tituloModalPersonalizar"></h3>

      <div class="modal-group">
        <label>Hambúrguer (até 3):</label>
        <div class="modal-quantidade">
          <button onclick="alterarQtdExtra('hamburguer', -1)">-</button>
          <span id="qtdHamburguer">1</span>
          <button onclick="alterarQtdExtra('hamburguer', 1)">+</button>
        </div>
      </div>

      <div class="modal-group">
        <label><input type="checkbox" id="queijo"> Queijo adicional</label>
        <label><input type="checkbox" id="bacon"> Bacon</label>
        <label><input type="checkbox" id="tomate"> Tomate</label>
        <label><input type="checkbox" id="alface"> Alface</label>
        <label><input type="checkbox" id="cebola"> Cebola roxa</label>
        <label><input type="checkbox" id="catupiry"> Catupiry</label>
      </div>

      <button class="modal-adicionar">Salvar</button>
    </div>
  </div>
</body>
</html>