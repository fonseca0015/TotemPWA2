@model IEnumerable<TotemPWA.Models.Ingredient>

@{
    //Layout = "_Admin";
    ViewData["Title"] = "Ingredientes";
}

<div class="admin-header d-flex justify-content-between align-items-center">
    <h2>Gerenciar Ingredientes</h2>
    <a href="/Admin" class="btn btn-voltar-painel">
        <i class="fas fa-arrow-left"></i> Voltar ao Painel
    </a>
</div>

<a asp-action="Create" class="btn btn-primary mb-3">Novo Ingrediente</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Limite</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Limit</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>